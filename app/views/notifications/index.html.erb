<div class="container">
    <div class="col-md-12">
        <!--自分の投稿に対するいいね、コメントは通知に表示しない-->
        <h3 class="text-center">通知</h3>
            <%= link_to destroy_all_notifications_path, method: :delete, data: { confirm: 'メッセージをすべて削除しますか？' } do %>
                <i class="fas fa-trash" style="color: black;"></i>
                <h7 style="color: black;">全削除</h7>
            <% end %>
            <hr>
        <% if @notifications.exists? %>
            <div class="users-index">
            <%= render @notifications %>
                <%= paginate @notifications %>
            </div>
        <% else %>
            <p>現在通知はありません</p>
        <% end %>
    </div>
</div>