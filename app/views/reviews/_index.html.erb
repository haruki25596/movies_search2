<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <table class='table'>
        <thead>
            <tr>
              <h3>投稿された感想・評価</h3>
            </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td>
                <%= link_to user_path(review.user.id) do %>
                  <%= attachment_image_tag review.user, :image, size: "100x100", fallback: "no_profile_image.jpg", class:"mt-3 rounded-circle"  %>
                  <br><%= review.user.name %></br>
                <% end %>
              </td>
              <td width="500"><%= review.body %></td>
              <td>
                <div id="star-rate-<%= review.id %>"></div>
                  <script>
                  $('#star-rate-<%= review.id %>').raty({
                    size: 36,
                    starOff:  '<%= asset_path('star-off.png') %>',
                    starOn : '<%= asset_path('star-on.png') %>',
                    starHalf: '<%= asset_path('star-half.png') %>',
                    half: true,
                    readOnly: true,
                    score: <%= review.rate %>,
                    scoreName: 'review[rate]'
                  });
                  </script>
                  <style>
                    td img {
                      width: 20px;
                      height: 20px;
                    }
                  </style>
              </td>
              <td>
                評価：<%= review.rate %>点
                <br><%= review.title %></br>
              </td>
              <td>
                <% if current_user == review.user %>
                  <%= link_to '削除', review, method: :delete, class:'badge badge-danger' %>
                <% end %>
              </td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @reviews %>
</div>