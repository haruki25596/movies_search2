<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <table class='table'>
        <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
        </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <a><%= attachment_image_tag user, :image,  fallback: "no_profile_image.jpg", class:"mt-3 rounded-circle", size: "40x40" %></a>
                </td>
                <td><%= user.name %></td>
                <td>フォロー数: <%= user.follower.count %></td>
                <td>フォロワー数: <%= user.followed.count %></td>
                <td id="relationship-btn_<%= user.id %>">
                  <%= render 'user_relationships/relationship-btn', user: user %>
                </td>
             <td><%= link_to '詳細', user_path(user), class: "user_#{user.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>